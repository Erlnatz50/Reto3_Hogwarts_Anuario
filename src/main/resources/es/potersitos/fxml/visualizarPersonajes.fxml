<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="900.0" styleClass="root"
            fx:controller="es.potersitos.controladores.ControladorVisualizarPersonajes">

    <top>
        <MenuBar styleClass="menu-bar">
            <Menu text="%menu.archivo">
                    <MenuItem text="%menu.archivo.nuevo" onAction="#onNuevo"/>
                    <MenuItem text="%menu.archivo.importar" onAction="#crearArchivos"/>
                    <MenuItem text="%menu.archivo.guardar"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="%menu.archivo.salir"/>
            </Menu>
            <Menu text="%menu.idioma">
                <MenuItem text="%menu.idioma.espanol" onAction="#idiomaEspaniol">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../img/logo_espaÃ±a.png" />
                        </ImageView>
                    </graphic>
                </MenuItem>
                <MenuItem text="%menu.idioma.ingles" onAction="#idiomaIngles">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../img/logo_ingles.png" />
                        </ImageView>
                    </graphic>
                </MenuItem>
                <MenuItem text="%menu.idioma.euskera" onAction="#idiomaEuskera">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../img/logo_euskera.png" />
                        </ImageView>
                    </graphic>
                </MenuItem>
            </Menu>
            <Menu text="%menu.ayuda">
                    <MenuItem text="%menu.ayuda.documentacion"/>
                    <MenuItem text="%menu.ayuda.acercade"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <StackPane BorderPane.alignment="CENTER">
                <!-- Main Content -->
                <VBox VBox.vgrow="ALWAYS">
                        <!-- Search Bar -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="search-container">
                            <Label styleClass="wand-icon" text="âš¡">
                                <font><Font size="20.0"/></font>
                            </Label>
                            <Label styleClass="glasses-icon" text="ðŸ‘“">
                                <font><Font size="18.0"/></font>
                            </Label>
                            <TextField fx:id="searchField" promptText="%visualizar.search.prompt" styleClass="search-field" HBox.hgrow="ALWAYS">
                                <tooltip><Tooltip text="%buscar.tooltip"/></tooltip>
                                <font><Font size="14.0"/></font>
                            </TextField>
                            <Button fx:id="btnFiltrar" mnemonicParsing="false" onAction="#toggleFilterPanel"
                                    styleClass="filter-button" text="%visualizar.filtro.titulo">
                                <tooltip><Tooltip text="%filtro.button.tooltip"/></tooltip>
                                <font><Font size="14.0"/></font>
                            </Button>
                            <padding><Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/></padding>
                        </HBox>

                        <!-- Character Grid -->
                        <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                                <TilePane fx:id="tilePanePersonajes" alignment="CENTER" hgap="20.0" vgap="20.0"
                                          prefColumns="4" styleClass="character-grid">
                                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/></padding>
                                </TilePane>
                        </ScrollPane>

                        <!-- Pagination and Action Buttons -->
                        <HBox alignment="CENTER" spacing="15.0" styleClass="bottom-container">
                            <Button fx:id="btnSeleccionar" mnemonicParsing="false" onAction="#toggleSelectionMode" styleClass="action-button" text="%visualizar.btn.seleccionar">
                                <tooltip><Tooltip text="%seleccionar.tooltip"/></tooltip>
                                <font><Font size="12.0"/></font>
                            </Button>
                            <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                                <Button mnemonicParsing="false" styleClass="page-button page-active" text="1">
                                    <tooltip><Tooltip text="Ir a la pÃ¡gina 1 de personajes"/></tooltip>
                                </Button>
                                <Button mnemonicParsing="false" styleClass="page-button" text="2">
                                    <tooltip><Tooltip text="Ir a la pÃ¡gina 2 de personajes"/></tooltip>
                                </Button>
                                <Button mnemonicParsing="false" styleClass="page-button" text="3">
                                    <tooltip><Tooltip text="Ir a la pÃ¡gina 3 de personajes"/></tooltip>
                                </Button>
                                <Label styleClass="page-dots" text="...">
                                </Label>
                                <Button mnemonicParsing="false" styleClass="page-button" text="200">
                                    <tooltip><Tooltip text="Ir a la Ãºltima pÃ¡gina de personajes"/></tooltip>
                                </Button>
                            </HBox>
                            <Button fx:id="btnExportar" mnemonicParsing="false" onAction="#exportarSeleccionados" styleClass="action-button" text="%visualizar.btn.exportar" visible="false" managed="false">
                                <tooltip><Tooltip text="%exportar.todos.tooltip"/></tooltip>
                                <font><Font size="12.0"/></font>
                            </Button>
                        <padding><Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/></padding>
                        </HBox>
                </VBox>

                <!-- Filter Panel (Right Side) -->
                <VBox fx:id="filterPanel" managed="false" maxWidth="300.0" prefWidth="300.0"
                      styleClass="filter-panel" visible="false" StackPane.alignment="CENTER_RIGHT">
                        <!-- Filter Header -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label styleClass="filter-title" text="Filtrar" HBox.hgrow="ALWAYS">
                                    <tooltip><Tooltip text="%abrirFiltro.tooltip"/></tooltip>
                                    <font><Font name="System Bold" size="18.0"/></font>
                                </Label>
                                <Button fx:id="btnCerrarFiltro" alignment="CENTER" mnemonicParsing="false"
                                        onAction="#toggleFilterPanel" styleClass="close-filter-button" text="âœ•">
                                    <tooltip><Tooltip text="%cerrarFiltro.tooltip"/></tooltip>
                                    <font><Font size="16.0"/></font>
                                    <opaqueInsets><Insets/></opaqueInsets>
                                    <HBox.margin><Insets left="180.0"/></HBox.margin>
                                </Button>
                            <VBox.margin><Insets bottom="10.0"/></VBox.margin>
                        </HBox>

                        <!-- Filter Content with Accordion -->
                        <Accordion fx:id="accordionFiltros" styleClass="filter-accordion" VBox.vgrow="ALWAYS">
                            <tooltip><Tooltip text="%acordeonFiltros.tooltip"/></tooltip>
                            <panes>
                                <TitledPane styleClass="filter-titled-pane" text="%filtro.titulo.casa">
                                    <tooltip><Tooltip text="%filtrarPorCasa.tooltip"/></tooltip>
                                        <VBox spacing="5.0" styleClass="filter-checkboxes">
                                            <CheckBox text="%filtro.valor.gryffindor">
                                                <tooltip><Tooltip text="%gryffindor.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.slytherin">
                                                <tooltip><Tooltip text="%slytherin.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.hufflepuff">
                                                <tooltip><Tooltip text="%hufflepuff.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.ravenclaw">
                                                <tooltip><Tooltip text="%ravenclaw.tooltip"/></tooltip>
                                            </CheckBox>
                                            <padding><Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/></padding>
                                        </VBox>
                                </TitledPane>
                                <TitledPane styleClass="filter-titled-pane" text="%filtro.titulo.nacionalidad">
                                    <tooltip><Tooltip text="%nacionalidad.tooltip"/></tooltip>
                                        <VBox spacing="5.0" styleClass="filter-checkboxes">
                                            <CheckBox text="%filtro.valor.britanico">
                                                <tooltip><Tooltip text="%britanico.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.irlandes">
                                                <tooltip><Tooltip text="%irlandes.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.frances">
                                                <tooltip><Tooltip text="%frances.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.bulgaro">
                                                <tooltip><Tooltip text="%bulgaro.tooltip"/></tooltip>
                                            </CheckBox>
                                        <padding><Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/></padding>
                                        </VBox>
                                </TitledPane>
                                <TitledPane styleClass="filter-titled-pane" text="%filtro.titulo.especie">
                                    <tooltip><Tooltip text="Filtrar personajes segÃºn su especie"/></tooltip>
                                        <VBox spacing="5.0" styleClass="filter-checkboxes">
                                            <CheckBox text="%filtro.valor.humano">
                                                <tooltip><Tooltip text="%humanos.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.mestizo">
                                                <tooltip><Tooltip text="%mestizo.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.elfo">
                                                <tooltip><Tooltip text="%elfos.tooltip"/></tooltip>
                                            </CheckBox>
                                            <CheckBox text="%filtro.valor.gigante">
                                                <tooltip><Tooltip text="%gigante.tooltip"/></tooltip>
                                            </CheckBox>
                                        <padding><Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/></padding>
                                        </VBox>
                                </TitledPane>
                                <TitledPane styleClass="filter-titled-pane" text="%filtro.titulo.genero">
                                    <tooltip><Tooltip text="%genero.tooltip"/></tooltip>
                                        <VBox spacing="5.0" styleClass="filter-checkboxes">
                                                <CheckBox text="%filtro.valor.masculino">
                                                    <tooltip><Tooltip text="%masculino.tooltip"/></tooltip>
                                                </CheckBox>
                                                <CheckBox text="%filtro.valor.femenino">
                                                    <tooltip><Tooltip text="%femenino.tooltip"/></tooltip>
                                                </CheckBox>
                                            <padding><Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/></padding>
                                        </VBox>
                                </TitledPane>
                            </panes>
                        </Accordion>

                        <!-- Filter Action Buttons -->
                        <HBox alignment="CENTER" spacing="10.0">
                                <Button onAction="#aplicarFiltros" styleClass="apply-filter-button" text="%visualizar.filtro.aplicar">
                                    <tooltip><Tooltip text="%aplicarFiltro.tooltip"/></tooltip>
                                    <font><Font size="12.0"/></font>
                                </Button>
                                <Button onAction="#limpiarFiltros" styleClass="clear-filter-button" text="%visualizar.filtro.limpiar">
                                    <tooltip><Tooltip text="%quitarFiltro.tooltip"/></tooltip>
                                    <font><Font size="12.0"/></font>
                                </Button>
                            <VBox.margin><Insets top="10.0"/></VBox.margin>
                        </HBox>
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/></padding>
                </VBox>
        </StackPane>
    </center>
</BorderPane>