<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="es.potersitos.controladores.ControladorDatos">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <BorderPane prefWidth="800" prefHeight="600">

        <!-- Imagen a la izquierda -->
        <left>
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="imageView" fitWidth="200" fitHeight="250" preserveRatio="true"/>
            </VBox>
        </left>

        <!-- Datos en el centro con ScrollPane -->
        <center>
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <content>
                    <VBox fx:id="datosVBox" spacing="8">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <Label fx:id="nombreLabel" text="Nombre:"/>
                        <Label fx:id="aliasLabel" text="Alias:"/>
                        <Label fx:id="animagusLabel" text="Animagus:"/>
                        <Label fx:id="bloodStatusLabel" text="Blood Status:"/>
                        <Label fx:id="boggartLabel" text="Boggart:"/>
                        <Label fx:id="nacidoLabel" text="Nacido:"/>
                        <Label fx:id="fallecidoLabel" text="Fallecido:"/>
                        <Label fx:id="colorOjosLabel" text="Color de ojos:"/>
                        <Label fx:id="familiaresLabel" text="Familiares:"/>
                        <Label fx:id="generoLabel" text="Género:"/>
                        <Label fx:id="colorPeloLabel" text="Color de pelo:"/>
                        <Label fx:id="alturaLabel" text="Altura:"/>
                        <Label fx:id="casaLabel" text="Casa:"/>
                        <Label fx:id="imagenLabel" text="Imagen:"/>
                        <Label fx:id="trabajosLabel" text="Trabajos:"/>
                        <Label fx:id="estadoCivilLabel" text="Estado civil:"/>
                        <Label fx:id="nacionalidadLabel" text="Nacionalidad:"/>
                        <Label fx:id="patronusLabel" text="Patronus:"/>
                        <Label fx:id="romancesLabel" text="Romances:"/>
                        <Label fx:id="colorPielLabel" text="Color de piel:"/>
                        <Label fx:id="especieLabel" text="Especie:"/>
                        <Label fx:id="titulosLabel" text="Títulos:"/>
                        <Label fx:id="varitasLabel" text="Varitas:"/>
                        <Label fx:id="pesoLabel" text="Peso:"/>
                    </VBox>
                </content>
            </ScrollPane>
        </center>

        <!-- Botones en la parte inferior -->
        <bottom>
            <HBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button fx:id="actualizarButton" text="Actualizar" onAction="#handleActualizar"/>
                <Button fx:id="exportarButton" text="Exportar" onAction="#handleExportar"/>
                <Button fx:id="eliminarButton" text="Eliminar" onAction="#handleEliminar"/>
            </HBox>
        </bottom>

    </BorderPane>

    <!-- Botón de cerrar en la esquina superior derecha -->
    <Button fx:id="closeButton" text="X" onAction="#cerrarVentana" StackPane.alignment="TOP_RIGHT">
        <StackPane.margin>
            <Insets top="8" right="8"/>
        </StackPane.margin>
    </Button>

</StackPane>
