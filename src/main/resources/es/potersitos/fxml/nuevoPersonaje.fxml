<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="es.potersitos.controladores.ControladorNuevoPersonaje">



    <BorderPane prefHeight="600.0" prefWidth="800.0">

        <!-- Lado izquierdo: imagen -->
        <left>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <ImageView fx:id="imageView" fitHeight="250" fitWidth="200" preserveRatio="true"/>
                <Button text="Cargar Imagen" fx:id="imageButton"/>
            </VBox>
        </left>

        <!-- Centro: campos editables -->
        <center>
            <ScrollPane fitToWidth="true">
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- Campos del personaje -->
                    <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="typeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Slug:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="slugField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Nombre:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Alias:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextArea fx:id="aliasField" prefRowCount="2" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Animagus:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="animagusField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Estado de sangre:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="bloodStatusField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Boggart:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <TextField fx:id="boggartField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Label text="Nacimiento:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                    <TextField fx:id="bornField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                    <Label text="Fallecimiento:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                    <TextField fx:id="diedField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                    <Label text="Color de ojos:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                    <TextField fx:id="eyeColorField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                    <Label text="Familiares:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                    <TextArea fx:id="familyField" prefRowCount="2" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                    <Label text="Género:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
                    <TextField fx:id="genderField" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

                    <Label text="Color de pelo:" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
                    <TextField fx:id="hairColorField" GridPane.rowIndex="13" GridPane.columnIndex="1"/>

                    <Label text="Altura:" GridPane.rowIndex="14" GridPane.columnIndex="0"/>
                    <TextField fx:id="heightField" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

                    <Label text="Casa:" GridPane.rowIndex="15" GridPane.columnIndex="0"/>
                    <TextField fx:id="houseField" GridPane.rowIndex="15" GridPane.columnIndex="1"/>

                    <Label text="Trabajos:" GridPane.rowIndex="16" GridPane.columnIndex="0"/>
                    <TextArea fx:id="jobsField" prefRowCount="2" GridPane.rowIndex="16" GridPane.columnIndex="1"/>

                    <Label text="Estado civil:" GridPane.rowIndex="17" GridPane.columnIndex="0"/>
                    <TextField fx:id="maritalStatusField" GridPane.rowIndex="17" GridPane.columnIndex="1"/>

                    <Label text="Nacionalidad:" GridPane.rowIndex="18" GridPane.columnIndex="0"/>
                    <TextField fx:id="nationalityField" GridPane.rowIndex="18" GridPane.columnIndex="1"/>

                    <Label text="Patronus:" GridPane.rowIndex="19" GridPane.columnIndex="0"/>
                    <TextField fx:id="patronusField" GridPane.rowIndex="19" GridPane.columnIndex="1"/>

                    <Label text="Romances:" GridPane.rowIndex="20" GridPane.columnIndex="0"/>
                    <TextArea fx:id="romancesField" prefRowCount="2" GridPane.rowIndex="20" GridPane.columnIndex="1"/>

                    <Label text="Color de piel:" GridPane.rowIndex="21" GridPane.columnIndex="0"/>
                    <TextField fx:id="skinColorField" GridPane.rowIndex="21" GridPane.columnIndex="1"/>

                    <Label text="Especie:" GridPane.rowIndex="22" GridPane.columnIndex="0"/>
                    <TextField fx:id="speciesField" GridPane.rowIndex="22" GridPane.columnIndex="1"/>

                    <Label text="Títulos:" GridPane.rowIndex="23" GridPane.columnIndex="0"/>
                    <TextArea fx:id="titlesField" prefRowCount="2" GridPane.rowIndex="23" GridPane.columnIndex="1"/>

                    <Label text="Varitas:" GridPane.rowIndex="24" GridPane.columnIndex="0"/>
                    <TextArea fx:id="wandsField" prefRowCount="2" GridPane.rowIndex="24" GridPane.columnIndex="1"/>

                    <Label text="Peso:" GridPane.rowIndex="25" GridPane.columnIndex="0"/>
                    <TextField fx:id="weightField" GridPane.rowIndex="25" GridPane.columnIndex="1"/>

                    <Label text="Wiki:" GridPane.rowIndex="26" GridPane.columnIndex="0"/>
                    <TextField fx:id="wikiField" GridPane.rowIndex="26" GridPane.columnIndex="1"/>
                </GridPane>
            </ScrollPane>
        </center>

        <!-- Abajo: botones -->
        <bottom>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="Cancelar" fx:id="cancelButton"/>
                <Button text="Guardar" fx:id="saveButton"/>
            </HBox>
        </bottom>

    </BorderPane>

    <!-- Botón cerrar -->
    <Button text="X" fx:id="closeButton" onAction="#cerrarVentana" StackPane.alignment="TOP_RIGHT">
        <StackPane.margin>
            <Insets top="8" right="8" bottom="8" left="8"/>
        </StackPane.margin>
    </Button>

</StackPane>
