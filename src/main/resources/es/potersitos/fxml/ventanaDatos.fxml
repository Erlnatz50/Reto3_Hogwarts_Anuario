<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<StackPane styleClass="root" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.potersitos.controladores.ControladorDatos">

    <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">

        <left>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="20" top="10" />
                </padding>
                <ImageView id="imageView" fx:id="imageView" fitHeight="250" fitWidth="200" preserveRatio="true" />
            </VBox>
        </left>

        <center>
            <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
                <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
                    <VBox alignment="CENTER_LEFT">
                        <GridPane fx:id="datosGrid" hgap="6" vgap="8" styleClass="datos-container">
                            <padding>
                                <Insets bottom="10" left="15" right="10" top="10" />
                            </padding>
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" minWidth="120" prefWidth="120" maxWidth="120" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="0.0" />
                            </columnConstraints>
                        </GridPane>
                    </VBox>
                </ScrollPane>
            </VBox>
        </center>

        <bottom>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Button fx:id="actualizarButton" onAction="#handleActualizar" text="%actualizar.button">
                    <HBox.margin>
                        <Insets left="220.0" />
                    </HBox.margin>
                    <tooltip>
                        <Tooltip text="%actualizar.tooltip" />
                    </tooltip>
                </Button>
                <Button fx:id="exportarButton" onAction="#handleExportar" text="%exportar.button">
                    <tooltip>
                        <Tooltip text="%exportar.tooltip" />
                    </tooltip>
                </Button>
                <Button fx:id="eliminarButton" onAction="#handleEliminar" text="%eliminar.button">
                    <tooltip>
                        <Tooltip text="%eliminar.tooltip" />
                    </tooltip>
                </Button>
            </HBox>
        </bottom>
        <top>

            <Button id="closeButton" fx:id="closeButton" onAction="#cerrarVentana" text="X" BorderPane.alignment="CENTER_RIGHT">
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
            </Button>
        </top>
    </BorderPane>

</StackPane>
